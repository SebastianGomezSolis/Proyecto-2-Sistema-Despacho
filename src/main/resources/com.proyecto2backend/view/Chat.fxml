<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" style="-fx-background-color: linear-gradient(to bottom, #f8f7ff 0%, #ede7ff 100%); -fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto2backend.controller.ChatController">

    <!-- Compact Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 18; -fx-effect: dropshadow(gaussian, rgba(139, 92, 246, 0.12), 10, 0, 0, 3);">
        <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #6d28d9;" text="ðŸ’¬ Chat hospital" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="txtNombre" prefWidth="180" promptText="Digita tu nombre" style="-fx-background-color: #f5f3ff; -fx-background-radius: 8; -fx-border-color: #ddd6fe; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 8 12; -fx-font-size: 12px; -fx-prompt-text-fill: #a78bfa;" />
        <Button fx:id="btnConectar" onAction="#onConnect" style="-fx-background-color: linear-gradient(to right, #8b5cf6, #7c3aed); -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(139, 92, 246, 0.3), 6, 0, 0, 2);" text="Conectar" />
    </HBox>

    <!-- Chat Messages Area - Maximized -->
    <VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(139, 92, 246, 0.12), 10, 0, 0, 3);" VBox.vgrow="ALWAYS">
        <HBox style="-fx-background-color: linear-gradient(to right, #8b5cf6, #a78bfa); -fx-background-radius: 12 12 0 0; -fx-padding: 10 18;">
            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸ“‹ Mensajes" />
        </HBox>
        <TextArea fx:id="txtArea" editable="false" prefHeight="450" style="-fx-background-color: #faf9fc; -fx-control-inner-background: #faf9fc; -fx-background-radius: 0 0 12 12; -fx-padding: 18; -fx-font-size: 13px; -fx-text-fill: #4c1d95; -fx-border-width: 0;" wrapText="true" />
    </VBox>

    <!-- Compact Input Section -->
    <HBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 18; -fx-effect: dropshadow(gaussian, rgba(139, 92, 246, 0.12), 10, 0, 0, 3);">
        <TextField fx:id="txtInput" promptText="Digite su mensaje..." style="-fx-background-color: #f5f3ff; -fx-background-radius: 8; -fx-border-color: #ddd6fe; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 10 14; -fx-font-size: 12px; -fx-prompt-text-fill: #a78bfa;" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnEnviar" onAction="#onSend" style="-fx-background-color: linear-gradient(to right, #7c3aed, #6d28d9); -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 25; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(124, 58, 237, 0.3), 6, 0, 0, 2);" text="Enviar" />
    </HBox>

</VBox>
